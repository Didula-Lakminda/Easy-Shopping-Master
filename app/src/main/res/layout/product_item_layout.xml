<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/productname_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:layout_below="@id/productimage_imageView"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <ImageView
            android:id="@+id/productimage_imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/productprice_textView"
            android:layout_below="@id/productdescription_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/productdescription_textView"
            android:layout_below="@id/productname_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>